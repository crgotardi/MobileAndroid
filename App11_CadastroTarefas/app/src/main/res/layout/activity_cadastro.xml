<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroActivity">

    <Button
            android:layout_width="208dp"
            android:layout_height="53dp"
            android:id="@+id/btnSalvar"
            android:backgroundTint="#6BC1E8"
            android:drawableLeft="@drawable/ic_floppy_disk"
            android:drawablePadding="8dp"
            android:text="Adicionar Tarefa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/swtFinalizado"
            android:layout_marginTop="32dp"/>
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/imvFoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="144dp"
            android:background="@drawable/borda"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:id="@+id/edtTitulo"
            android:hint="Título"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imvFoto"
            android:layout_marginTop="92dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"/>
    <EditText
            android:layout_width="322dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:id="@+id/edtDescricao"
            android:hint="Descrição"
            app:layout_constraintTop_toBottomOf="@+id/edtTitulo"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"/>
    <Switch
            android:layout_width="161dp"
            android:layout_height="26dp"
            android:id="@+id/swtFinalizado"
            android:text="Concluída?"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtDescricao"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.176"/>

</androidx.constraintlayout.widget.ConstraintLayout>